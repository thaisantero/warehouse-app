<h2> Fornecedores </h2>

<% if @suppliers.any? %>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Localização</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do | supplier | %>
      <tr>
        <td><%= supplier.brand_name %></td>
        <td> <%= supplier.city%> - <%= supplier.state %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não existem fornecedores cadastrados.</p>
<% end %>